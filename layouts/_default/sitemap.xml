{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{ range where .Site.AllPages "Kind" "not in" (slice "section" "taxonomy" "term" "home" "404") }}
    {{ if and (ne .RelPermalink "/") (ne .Kind "404") }}
      <url>
        <loc>{{ .Permalink | absURL }}</loc>
        {{ if not .Lastmod.IsZero }}
          <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
        {{ end }}
        {{ if eq .Kind "page" }}
          <changefreq>weekly</changefreq>
          <priority>0.8</priority>
        {{ end }}
      </url>
    {{ end }}
  {{ end }}
  {{ range .Site.Taxonomies.categories }}
    <url>
      <loc>{{ .Page.Permalink | absURL }}</loc>
      <lastmod>{{ now.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.6</priority>
    </url>
  {{ end }}
</urlset>